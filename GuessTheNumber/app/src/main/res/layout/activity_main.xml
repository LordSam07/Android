<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#36DFAF">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter Range:"
            android:ems="10"
            tools:layout_editor_absoluteY="39dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/rangeBox" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:layout_marginTop="59dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Guess The Number:"
            android:ems="10"
            tools:layout_editor_absoluteY="148dp" tools:layout_editor_absoluteX="99dp" android:id="@+id/guessBox"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="160dp"/>
    <Button
            android:text="Guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="160dp"
            android:id="@+id/guessButton" android:layout_marginTop="292dp" android:layout_marginRight="160dp"/>
</RelativeLayout>